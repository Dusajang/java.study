package days09;

public class Ex04_02 {

	public static void main(String[] args) {
		int n = 10;			//8진수 출력
		int share, reminder;
		
		int[] octaArr = new int[32];
		
		int index = octaArr.length-1;
		while (n>8) {
			share = n/8;
			reminder = n%8;
			n=share;
			System.out.printf("%d", reminder);
		}

		for (int i = 0; i < octaArr.length; i++) {
			System.out.printf("%d", octaArr[i]);
		}
	}

}
