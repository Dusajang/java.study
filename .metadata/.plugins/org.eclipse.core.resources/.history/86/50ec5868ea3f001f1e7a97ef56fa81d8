package days010;

import java.io.IOException;
import java.util.Scanner;

public class Test01 {

	public static void main(String[] args) throws IOException {
//		30명 학생의 이름,국,영,수,총,평,등를 처리하는 배열을 선언
//		하고 학생정보 입력 후 출력하는 코딩을 하세요. 
		
		String name;
		int kor,eng,mat,tot;
		double avg;
		
		final int STUDENT_COUNT = 30;
		
		studentInfomationInput()
		studentInfomationOutput()
		
		String[] names = new String[STUDENT_COUNT];
		int[] kors = new int[STUDENT_COUNT];
		int[] engs = new int[STUDENT_COUNT];
		int[] mats = new int[STUDENT_COUNT];
		int[] tots = new int[STUDENT_COUNT];
		double[] avgs = new double[STUDENT_COUNT];
		
		Scanner scanner = new Scanner(System.in);
		
		int count = 0;
		char con = 'y';
		System.out.printf(">이름, 국어, 영어, 수학 입력", count+1);
		
		
		for (int i = 0; i < count; i++) {
			System.out.printf("%s\t%d\t%d\t%d\t%d\t%.2f", name[i], kor[i], eng[i], mat[i], tot[i], avg[i] );
			
		}
		


	private static void studentInfomationInput(String[]) {
		do {
			
			name = scanner.next();
			kor = scanner.nextInt();
			eng = scanner.nextInt();
			mat = scanner.nextInt();
			tot = kor + eng + mat;
			avg = (double)tot/3;
			
			names[count] = name;
			kors[count] = kor;
			engs[count] = eng;
			mats[count] = mat;
			tots[count] = tot;
			avgs[count] = avg;
			
			count++;
			
			System.out.println("계속 입력 'Y' 입력");
			con = (char) System.in.read();
			System.in.skip(System.in.available());
		} while (Character.toUpperCase(con) == 'Y');
		
	}
		
	}//main

}//class






