package ch01.verify;

public class Aasdasd {

	public static void main(String[] args) {
		
		int n =7;
		int evenodd = 0;
		int oddpow = 0;
		int answer = 0;
		
		for(int i = 1 ; i <= n; i++){
            if(n % 2 != 0){
                answer += i;
            } else if(n % 2 == 0){
                answer += i^2;
            }
        }
		System.out.println(answer);

	}//main

}
