package days010;

public class Ex03 {

	public static void main(String[] args) {
		double result = pow(2,3);
		System.out.println(result);
		
		result = pow(2,-3);
		System.out.println(result);

	}//main

	private static double pow(int i, int j) {
		//2^3 = 2x2x2
		//2^-3 =1/2^3 =1/(2x2x2)
		double result = 1;
		int exp = Math.abs(j);
		for (int k = 0; k < exp; k++) {
			result *= i;
		}
		return j>0 ? result : 1/result;
	}

}//class
