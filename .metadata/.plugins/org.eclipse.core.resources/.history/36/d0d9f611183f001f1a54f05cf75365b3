package days08_Review;

public class Home_Review01_02 {

	public static void main(String[] args) {
		//1. 주민등록 번호를 입력받아서 만 나이를 계산하는 메서드 선언
		//960501-1234567
		String rrn = 960501-1234567;
		
		int bYear = Integer.parseInt( (rrn.substring(0, 2)) );
		int bMonth = Integer.parseInt( (rrn.substring(0, 2)) );
		int bDate = Integer.parseInt( (rrn.substring(0, 2)) );
		int Gender = Integer.parseInt( (rrn.substring(0, 2)) );
		
		getBirthYear()

	}

	private static void getBirthYear(String rrn) {
		int bYear = Integer.parseInt( (rrn.substring(0, 2)) );
		int Gender = Integer.parseInt( (rrn.substring(0, 2)) );
		
		if (Gender == 1 || Gender == 2 || Gender ==5  || Gender ==6 ) {
			bYear = 1900+bYear;
		}else if (Gender == 3 || Gender == 4 || Gender == 7 || Gender == 8) {
			bYear = 2000+bYear;
		}else {bYear = 1800+bYear;}
	}//main

}//class
